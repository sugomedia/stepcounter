<%- include('header') %>

<%- include('menu') %>
 
<main class="container" >
   
        <h1 class="h3 mb-3 fw-normal">Table view - stepdatas</h1>
       
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th class="text-end">Stepcount</th>
                    <th class="text-end">Options</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i< results.length; i++) { %>    
                    <tr>
                        <td><%= moment(results[i].date).format('YYYY-MM-DD') %></td>
                        <td class="text-end"><%= results[i].stepcount %></td>
                        <td class="text-end"><a href="/deletestep/<%=  results[i].ID %>">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3"></td>
                </tr>
            </tfoot>
        </table>
</main>


<%- include('footer') %>