<%- include('header') %>

<%- include('menu') %>
 
<main class="form-signin">
    <form action="/newdata" method="POST">
        <h1 class="h3 mb-3 fw-normal">Add new stepcount</h1>
        <% if (eMsg) {
            %> <em> <%= eMsg %> </em> <%
        } %>
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" class="form-control" name="datum" max="<%= aktDate %>" value="<%= aktDate %>" required>
        </div>
        <div class="form-group">
            <label for="stepcount">Stepcount:</label>
            <input type="number" class="form-control" name="stepcount" min="0" value="0" required>
        </div>
        <div class="form-group">
            <input class="btn btn-lg btn-primary" type="submit" value="Submit">
        </div>
    </form>
</main>


<%- include('footer') %>