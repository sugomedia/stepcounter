<%- include('header') %>

<%- include('menu') %>
 
<main class="form-signin">
    <form action="/profilmod" method="POST">
        <h1 class="h3 mb-3 fw-normal">Profil change</h1>
        <% if (eMsg) {
            %> <em> <%= eMsg %> </em> <%
        } %>
        <div class="form-group">
            <input type="text" class="form-control" name="username" value="<%= profilData.name %>" placeholder="Username" required>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name="email" value="<%= profilData.email %>" placeholder="E-mail address" required>
        </div>
        <div class="form-group">
            <label for="reg">Registration date:</label>
            <input type="text" class="form-control" name="reg" value="<%= profilData.reg %>" disabled>  
        </div>
        <div class="form-group">
            <label for="last">Last login date:</label>
            <input type="text" class="form-control" name="last" value="<%= profilData.last %>" disabled>  
        </div>
        <div class="form-group">
            <input class="btn btn-lg btn-primary" type="submit" value="Modify profil">
        </div>
    </form>
</main>


<%- include('footer') %>